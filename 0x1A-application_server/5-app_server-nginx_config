server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;  # This should point to your web root directory
    index index.html index.htm;

    server_name _;  # Wildcard for all server names

    # Custom Header
    add_header X-Served-By 500025-web-01;

    # Serve static files for /hbnb_static
    location /hbnb_static {
        alias /data/web_static/current/;
    }

    location /static/ {
        alias /home/ubuntu/AirBnB_clone_v4/web_dynamic/static/;
        try_files $uri $uri/ =404;
    }

    location / {
        proxy_pass http://0.0.0.0:5003;
    }

    # Custom 404 page
    error_page 404 /error_404.html;
    location = /error_404.html {
        internal;
    }
}
